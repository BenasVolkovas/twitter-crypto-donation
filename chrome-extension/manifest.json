{
    "name": "Twitter crypto donation (TCD)",
    "description": "Twitter crypto donation chrome extention",
    "version": "1.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "/js/background.js"
    },
    "action": {
        "default_popup": "/html/popup.html",
        "default_icon": {
            "16": "/images/logo16.png",
            "32": "/images/logo32.png",
            "48": "/images/logo48.png",
            "128": "/images/logo128.png"
        }
    },
    "icons": {
        "16": "/images/logo16.png",
        "32": "/images/logo32.png",
        "48": "/images/logo48.png",
        "128": "/images/logo128.png"
    },
    "permissions": ["tabs", "storage", "identity"],
    "host_permissions": ["https://api.twitter.com/*", "https://twitter.com/*"],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["/js/content.js"]
        }
    ]
}
